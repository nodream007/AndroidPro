<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/subbk"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sub_12_title"
        android:gravity="right|center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonOK"
            android:layout_width="121dp"
            android:layout_height="36dp"
            android:background="@drawable/btn_ok_style" />

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="121dp"
            android:layout_height="36dp"
            android:background="@drawable/btn_back_style" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layoutContent"
            android:layout_width="800dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/content_border"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="50dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="@string/setting_server"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/large_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp" >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_ip"
                        android:textSize="@dimen/middle_text_size" />

                    <EditText
                        android:id="@+id/editServer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bk"
                        android:ems="10"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textColor="#000000" >

                        <requestFocus />
                    </EditText>
                </LinearLayout>
                
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/list_divider_long" />
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="终端"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/large_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备识别号　　"
                        android:textSize="@dimen/middle_text_size" />

                    <EditText
                        android:id="@+id/editID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bk"
                        android:ems="10"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textColor="#000000" >

                        <requestFocus />
                    </EditText>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/list_divider_long" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="@string/setting_maprefresh"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/large_text_size" />

                <LinearLayout
                    android:id="@+id/layoutSettingRefresh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp" >

                    <TextView
                        android:id="@+id/textSetting05s"
                        android:layout_width="match_parent"
                        android:layout_height="35sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="5S"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/middle_text_size" />

                    <TextView
                        android:id="@+id/textSetting15s"
                        android:layout_width="match_parent"
                        android:layout_height="35sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="15S"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/middle_text_size" />

                    <TextView
                        android:id="@+id/textSetting30s"
                        android:layout_width="match_parent"
                        android:layout_height="35sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="30S"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/middle_text_size" />

                    <TextView
                        android:id="@+id/textSetting60s"
                        android:layout_width="match_parent"
                        android:layout_height="35sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="60S"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/middle_text_size" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/list_divider_long" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="@string/setting_registration"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/large_text_size" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="序列号：123456789ABCDEF\n软件已注册"
                    android:textSize="@dimen/middle_text_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>