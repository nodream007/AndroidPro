<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/med_total_situation_content"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="@drawable/list_box_left1"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/ill_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="150dp"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:padding="10dp"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/content_margin"
        android:background="@drawable/list_box_left1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/content_margin"
            android:layout_marginTop="@dimen/content_margin"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关押人数:"
                android:textColor="@color/total_ill_type_color"
                android:textSize="@dimen/large_text_size" />

            <TextView
                android:id="@+id/lock_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/red"
                android:textSize="@dimen/large_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="重病患人数:"
                android:textColor="@color/total_ill_type_color"
                android:textSize="@dimen/large_text_size" />

            <TextView
                android:id="@+id/lock_serial_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/red"
                android:textSize="@dimen/large_text_size" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/content_margin"
            android:layout_marginRight="@dimen/content_margin"
            android:layout_marginTop="10dp"
            android:background="@drawable/list_divider_long" />

        <GridView
            android:id="@+id/ill_type_person_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/content_margin"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="@dimen/content_margin"
            android:numColumns="4" >
        </GridView>
    </LinearLayout>

</LinearLayout>