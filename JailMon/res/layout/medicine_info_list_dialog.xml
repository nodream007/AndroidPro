<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/confirm_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/content_margin"
        android:paddingTop="@dimen/content_margin"
        android:text="配药清单"
        android:textColor="@color/white"
        android:textSize="@dimen/large_text_size" />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp">
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="5"
	        android:text="药品名称"
	        android:textColor="@color/white"
	        android:textSize="@dimen/middle_text_size"/>
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="数量"
	        android:textColor="@color/white"
	        android:textSize="@dimen/middle_text_size"/>
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="单位"
	        android:textColor="@color/white"
	        android:textSize="@dimen/middle_text_size"/>
	</LinearLayout>
	<ImageView
 	    android:id="@+id/history_top_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_margin"
        android:layout_marginRight="@dimen/content_margin"
        android:layout_marginTop="10dp"
        android:background="@drawable/list_divider_long" />
    <ListView
        android:id="@+id/medicine_info_list"
        android:layout_width="match_parent"
        android:layout_height="280dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
        android:horizontalSpacing="10dp"
        android:divider="@drawable/list_divider_long" />
    <ImageView
        android:id="@+id/purchase_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/box_pop_up_fgx" />
    <LinearLayout 
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
	    android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
	    android:gravity="center">
        <Button 
            android:id="@+id/med_ok"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginRight="40dp"
            android:text="确认"
            android:textColor="@color/white"
            android:background="@drawable/sure_button"
            android:textSize="@dimen/large_text_size"/>
        <Button 
            android:id="@+id/med_cancel"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="@color/white"
            android:background="@drawable/sure_button"
            android:textSize="@dimen/large_text_size"/>
    </LinearLayout>

</LinearLayout>