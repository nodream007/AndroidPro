<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/textGoodsName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Name"
        android:textSize="@dimen/middle_text_size" />
    
    <TextView
        android:id="@+id/textGoodsPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Price"
        android:textSize="@dimen/middle_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right|center_vertical" >

        <Button
            android:id="@+id/buttonGoodsSubsX"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="35dp"
            android:layout_height="34dp"
            android:background="@drawable/btn_sub_style"
            android:text="-" />

        <TextView
            android:id="@+id/textGoodsNum"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/text_purchase_border"
            android:gravity="center"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/middle_text_size" />

        <Button
            android:id="@+id/buttonGoodsAddX"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="35dp"
            android:layout_height="34dp"
            android:background="@drawable/btn_add_style"
            android:text="+" />

    </LinearLayout>

</LinearLayout>