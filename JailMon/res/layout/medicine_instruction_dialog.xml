<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/content_margin"
        android:paddingTop="@dimen/content_margin"
        android:text="用药说明"
        android:textSize="@dimen/large_text_size" />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
	    android:layout_marginLeft="40dp"
	    android:layout_marginRight="40dp">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="用药说明："
	        android:textSize="@dimen/middle_text_size"/>
	    <EditText 
	        android:id="@+id/send_med_instruction"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:maxLength="200"
	        android:hint="请填写用药说明"/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
	    android:layout_marginLeft="40dp"
	    android:layout_marginRight="40dp">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="备注说明："
	        android:textSize="@dimen/middle_text_size"/>
	     <EditText 
	         android:id="@+id/send_med_remark"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:maxLength="200"
	        android:hint="请填写备注说明"/>
	</LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/box_pop_up_fgx" />
    <LinearLayout 
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginTop="20dp"
	    android:gravity="center">
        <Button 
            android:id="@+id/send_med_ok"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:text="确认"
            android:textColor="@color/white"
            android:background="@drawable/sure_button"
            android:textSize="@dimen/large_text_size"/>
    </LinearLayout>

</LinearLayout>