<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/histroy_linear_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/history_date_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="诊疗时间:从"
            android:textSize="@dimen/large_text_size" />

        <TextView
            android:id="@+id/send_med_start_time_in_history"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_with_corner_5dp_blue"
            android:gravity="center"
            android:textColor="@color/white_date_hint"
            android:textSize="@dimen/middle_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="至"
            android:textSize="@dimen/large_text_size" />

        <TextView
            android:id="@+id/send_med_end_time_in_history"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_with_corner_5dp_blue"
            android:gravity="center"
            android:textColor="@color/white_date_hint"
            android:textSize="@dimen/middle_text_size" />
    </LinearLayout>

 	<ImageView
 	    android:id="@+id/history_top_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_margin"
        android:layout_marginRight="@dimen/content_margin"
        android:layout_marginTop="20dp"
        android:background="@drawable/list_divider_long" /> 

    <ListView
        android:id="@+id/send_med_in_history_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/content_margin"
        android:layout_marginRight="@dimen/content_margin"
        android:divider="@drawable/list_divider_long" >
    </ListView>

</LinearLayout>