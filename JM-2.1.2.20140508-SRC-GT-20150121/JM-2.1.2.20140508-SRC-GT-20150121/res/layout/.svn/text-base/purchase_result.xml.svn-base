<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/confirm_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/content_margin"
        android:paddingTop="@dimen/content_margin"
        android:text="请确认购买"
        android:textSize="@dimen/large_text_size" />

    <ImageView
        android:id="@+id/car"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/confirm_buy"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buy_car" />

    <TextView
        android:id="@+id/left_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/car"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/car"
        android:text="@string/purchase_success_content_left"
        android:textSize="@dimen/large_text_size" />

    <TextView
        android:id="@+id/sub_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/car"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/car"
        android:text="@string/purchase_success_content_sub"
        android:textSize="@dimen/large_text_size" />

    <ImageView
        android:id="@+id/purchase_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sub_money"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/box_pop_up_fgx" />

    <ImageView
        android:id="@+id/tips_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/car"
        android:layout_below="@id/purchase_divider"
        android:layout_marginTop="20dp"
        android:src="@drawable/success"
        android:textSize="@dimen/large_text_size" />

    <TextView
        android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/purchase_divider"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tips_btn"
        android:gravity="center"
        android:layout_alignTop="@id/tips_btn"
        android:layout_alignBottom="@id/tips_btn"
        android:textSize="@dimen/large_text_size" />

    <TextView
        android:id="@+id/cancel_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tips"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/back_bg"
        android:textColor="@color/gray"
        android:text="返回修改 >"
        android:textSize="@dimen/large_text_size" />

</RelativeLayout>