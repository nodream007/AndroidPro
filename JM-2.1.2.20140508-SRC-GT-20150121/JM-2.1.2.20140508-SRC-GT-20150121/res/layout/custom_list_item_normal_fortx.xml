<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
     >

    <ImageView
        android:id="@+id/pic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/pic"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/list_content_icon" />

        <TextView
            android:id="@+id/textHeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Headline"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/middle_text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/prisonerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/name"
        android:layout_below="@id/name"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/pic"
        android:textSize="@dimen/middle_i_text_size" />

    <TextView
        android:id="@+id/police"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/name"
        android:layout_below="@id/prisonerId"
        android:layout_marginRight="20dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/pic"
        android:textSize="@dimen/middle_i_text_size" />

    <TextView
        android:id="@+id/room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/name"
        android:layout_below="@id/police"
        android:layout_marginRight="20dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/pic"
        android:textSize="@dimen/middle_i_text_size" />
    
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/name"
        android:layout_below="@id/room"
        android:layout_marginRight="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@id/pic"
        android:textSize="@dimen/middle_i_text_size" />

    <TextView
        android:id="@+id/remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/name"
        android:layout_below="@id/room"
        android:layout_marginRight="20dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/pic"
        android:textSize="@dimen/middle_i_text_size" />
    
     <TextView
        android:id="@+id/tx_btn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@id/name"
        android:layout_marginLeft="250dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:textSize="@dimen/middle_text_size"
        android:text="未提"
         />

</RelativeLayout>