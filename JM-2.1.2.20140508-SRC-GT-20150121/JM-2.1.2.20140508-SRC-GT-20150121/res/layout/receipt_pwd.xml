<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/confirm_buy_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/content_margin"
        android:paddingTop="@dimen/content_margin"
        android:text="请输入支付密码"
        android:textSize="@dimen/large_text_size" />

    <EditText
        android:id="@+id/pwd_edit"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:inputType="textPassword"
        android:background="@drawable/pay_box"
        android:gravity="center" />

    <TextView
        android:id="@+id/pwd_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="*密码不正确，请重新输入"
        android:textColor="@color/red"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:id="@+id/confirm_buy_inpwd"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/sure_button"
        android:text="确认支付"
        android:textSize="@dimen/large_text_size" />

</LinearLayout>